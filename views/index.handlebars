<div class = "imagetop"><img src="assets/img/hamburger.png" align="middle"/></div>
<h1>Eat-Da-Burger!</h1>

<div class = "hamburgers">
<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <div class = "burgers">
        {{this.id}}
        .
        {{this.burger_name}}
       </div>
        <div class = "devourit_button">
        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="text" maxlength="50" id="addCustomer" name="customer_name"  placeholder="Customer Name?" required>
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Devour it!</button>
        </form>
       </div>
     {{/unless}}
  {{/each}}
</ul>
</div>

<div class = "devoured">
<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <div class = "burgers_devoured">
        {{this.id}}
        .
        {{this.burger_name}}
         Devoured by
        {{this.Customer.name}}
      </div>
    {{/if}}
  {{/each}}
</ul>
</div>
<div id = "cleared"></div>

<div class = "formsubmit">

<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
     <input type="text" maxlength="55" id="addtext" name="burger_name" required><p>
      <label>Enter a Burger you want to eat and click the "Submit" Button.</label>
  </div>
  <button type="submit" id= "submit"><p>Submit</p></button>
</form>
</div>